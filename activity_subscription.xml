<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium Subscription"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock all features and enjoy an ad-free experience."
            android:textColor="@color/black"
            android:paddingTop="8dp"
            android:textSize="14sp" />

        <!-- Tick list -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Ad-Free Experience"
                android:textColor="@color/teal_200"
                android:textSize="16sp"
                android:padding="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Exclusive Tools and Analytics"
                android:textColor="@color/teal_200"
                android:textSize="16sp"
                android:padding="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Priority Support"
                android:textColor="@color/teal_200"
                android:textSize="16sp"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Price box -->
        <TextView
            android:id="@+id/priceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$9.99 / month"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"
            android:backgroundtint="@color/teal_200"
            android:padding="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:backgroundTint="@color/teal_200"
            android:drawablePadding="10dp"/>

        <!-- Subscribe Button -->
        <Button
            android:id="@+id/subscribeNowBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe Now"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/teal_200"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:layout_marginTop="10dp" />

        <!-- Skip Button -->
        <Button
            android:id="@+id/skipBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip for Now"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:textColor="@color/teal_200"
            android:padding="14dp"
            android:layout_marginTop="12dp"
            android:drawablePadding="10dp"
            android:backgroundTint="@color/teal_200"
            android:backgroundTintMode="add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By subscribing, you agree to our Terms and Privacy Policy"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingTop="20dp" />

    </LinearLayout>

</ScrollView>
