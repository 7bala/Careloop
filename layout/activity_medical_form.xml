<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e4e3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:contentDescription="Close"
            android:src="@drawable/ic_close"
            android:background="#e3e4e3"
            app:tint="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Emergency Contact -->
        <LinearLayout
            android:id="@+id/layoutEmergency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/teal_200"
            android:padding="16dp"
            android:clipToOutline="true"
            app:layout_constraintTop_toBottomOf="@id/btnClose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Contact:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:inputType="phone"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Medical History -->
        <LinearLayout
            android:id="@+id/layoutMedical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/teal_200"
            app:layout_constraintTop_toBottomOf="@id/layoutEmergency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical History:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etBloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Blood Group"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etDietHabits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Diet Habits"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="8dp" />

            <!-- Question 1 with Yes/No dropdown -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvQuestion1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Do you Smoke?"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <Spinner
                    android:id="@+id/spinnerYesNo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <!-- Question 2 with Yes/No dropdown -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvQuestion2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Do you drink alcohol?"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <Spinner
                    android:id="@+id/spinnerYesNo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Family History Card -->
        <LinearLayout
            android:id="@+id/layoutFamily"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/teal_200"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/layoutMedical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family History (Optional):"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etGeneticHistory"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="History of Genetic Disorder"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:gravity="top|start"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="8dp" />
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutFamily"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
